<div class = "container mt-3" style = "width: 500px">
  <%= simple_form_for @book do |f| %>
    <div class="">
      <%= f.input :language, :label => "Langue" %>
      <%= f.input :language_details %>
      <%= f.input :date_of_acquisition %>
      <%= f.input :number_of_books %>
      <%= f.input :notes %>
      <%= f.input :in_my_collection %>
      <%= f.input :wishlist %>
      <!-- f.input :country -> ne fonctionne pas -->

      <div class="form-actions d-flex justify-content-between align-items-end ">
        <%= f.submit "Sauvegarder" %>
        <%= link_to 'Back to books', books_path, class: "" %>
      </div>
    </div>
  <% end %>
</div>
